<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="51dp"
                android:src="@drawable/ic_launcher" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/historyList" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>