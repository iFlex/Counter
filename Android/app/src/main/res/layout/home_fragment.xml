<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="left|right|bottom"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/countText"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.51"
            android:gravity="center|top"
            android:shadowColor="@android:color/background_dark"
            android:shadowRadius="40"
            android:textColorLink="@android:color/background_light"
            android:textSize="250sp"
            android:textStyle="bold" android:text="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:paddingRight="20dp"
            android:gravity="right|top"
            android:text="+10"
            android:textColorLink="@android:color/background_dark"
            android:textSize="30sp"
            android:id="@+id/uncertainty"
            />
        <felix.views.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.93"
            android:background="@android:color/transparent"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom|fill|start"
            android:paddingTop="10dp" android:layout_weight="0.8">

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Start"
                android:layout_margin="10dp"
                android:layout_marginBottom="0dp"/>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Reset"
                android:layout_margin="10dp"
                android:layout_marginBottom="0dp"/>

        </LinearLayout>



        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="bottom|center"
            android:background="@android:color/background_light">


        </HorizontalScrollView>


    </LinearLayout>
</RelativeLayout>